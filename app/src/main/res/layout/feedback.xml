<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/back10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:background="@null"

            />
        <TextView
            android:id="@+id/namestade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour D'avis"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginLeft="32dp"
           />
        <ImageView
            android:id="@+id/refresh2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/refresh"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
           />


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/titlee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="29dp"
            android:hint="Titre"
            android:textColorHint="#000"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/publicationn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titlee"
            android:layout_marginTop="15dp"
            android:hint="Editer quelque chose..."
            android:textColorHint="#000"
            tools:ignore="RtlCompat" />


        <Button
            android:id="@+id/validd"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_below="@+id/img"
            android:background="#4caf50"
            android:text="envoyer"
            android:textColor="#ffffff"
            tools:ignore="RtlCompat"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_below="@+id/addph"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/addph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/publicationn"
            android:text="photo"
            android:textColor="#4caf50"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</LinearLayout>